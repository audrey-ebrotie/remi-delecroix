{% extends 'base.html.twig' %}

{% block title %}
Me contacter - {{ parent() }}
{% endblock title %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}

<div class="inner_body">
    <div class="contact_body">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="contact_info">
                        <h3 class="title">Mes coordonnées</h3>
                        <p class="short_desc">Pour plus d'informations sur mes services et tarifs, n'hésitez pas à me contacter via les coordonnées ci-dessous où en m'envoyant en mail à l'aide du formulaire.</p>

                        <h4>Numéro de téléphone :</h4>
                        <p>06 30 11 29 17</p>
                        <h4>Email :</h4>
                        <p>contact@remi-delecroix.com</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact_form">
                        <h3 class="title">Formulaire de contact</h3>
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="input_field">
                                        {{ form_widget(form.prenom, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre prénom ou pseudo' } }) }}
                                        {{ form_errors(form.prenom) }}
                                        {{ form_label(form.prenom, 'Prénom', { 'label_attr': { 'for': 'prenom' } }) }}
                                        <span class="required-sm">obligatoire</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input_field">
                                        {{ form_widget(form.nom, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre nom' } }) }}
                                        {{ form_errors(form.nom) }}
                                        {{ form_label(form.nom, 'Nom', { 'label_attr': { 'for': 'nom' } }) }}
                                        <span class="optional-sm">facultatif</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input_field">
                                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre adresse email' } }) }}
                                        {{ form_errors(form.email) }}
                                        {{ form_label(form.email, 'Adresse email', { 'label_attr': { 'for': 'email' } }) }}
                                        <span class="required-sm">obligatoire</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input_field">
                                        {{ form_widget(form.telephone, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre numéro de téléphone' } }) }}
                                        {{ form_errors(form.telephone) }}
                                        {{ form_label(form.telephone, 'Numéro de téléphone', { 'label_attr': { 'for': 'telephone' } }) }}
                                        <span class="optional-sm">facultatif</span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="input_field">
                                        {{ form_widget(form.objet, { 'attr': { 'class': 'form-control', 'placeholder': 'Objet' } }) }}
                                        {{ form_errors(form.objet) }}
                                        {{ form_label(form.objet, 'Objet', { 'label_attr': { 'for': 'objet' } }) }}
                                        <span class="required-sm">obligatoire</span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="input_field">
                                        {{ form_widget(form.message, { 'attr': { 'class': 'form-control md-textarea', 'rows': '3', 'placeholder': 'Votre message' } }) }}
                                        {{ form_errors(form.message) }}
                                        {{ form_label(form.message, 'Votre message', { 'label_attr': { 'for': 'message' } }) }}
                                        <span class="required-sm">obligatoire</span>
                                    </div>

                                    <div class="button_group">
                                        <input type="submit" class="button black_button" value="Send Message">
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="page_title"><span>Me contacter</span></div>
{% endblock %}

